{
  "compilerOptions": {
    "lib": [
      "ES2017"
    ],
    "skipLibCheck": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node"],
    "target": "es5",
    "sourceMap": true,
    "rootDir": "./src"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/node-modules/"
  ]
}
